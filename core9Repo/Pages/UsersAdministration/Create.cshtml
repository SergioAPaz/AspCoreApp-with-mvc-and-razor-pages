@page
@model CRUDCore.Pages.UsersAdministration.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>CtUsers</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CtUsers.UserName" class="control-label"></label>
                <input asp-for="CtUsers.UserName" class="form-control" />
                <span asp-validation-for="CtUsers.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CtUsers.Password" class="control-label"></label>
                <input type="password" name="txtPassword" class="form-control" />

                <span asp-validation-for="CtUsers.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CtUsers.Role" class="control-label"></label>
                <select asp-for="CtUsers.Role" class="form-control" asp-items="ViewBag.Role"></select>
            </div>

            <div class="form-group">
                <label asp-for="CtUsers.Especialidad" class="control-label"></label>
                <input asp-for="CtUsers.Especialidad" class="form-control" />
                <span asp-validation-for="CtUsers.Especialidad" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CtUsers.NoCedula" class="control-label"></label>
                <input asp-for="CtUsers.NoCedula" class="form-control" />
                <span asp-validation-for="CtUsers.NoCedula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Fotografia:</label>
                <input class="form-control"  type="file" asp-for="Upload" />
                
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
