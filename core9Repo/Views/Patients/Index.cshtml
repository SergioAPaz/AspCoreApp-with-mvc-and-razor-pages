@model IEnumerable<CRUDCore.Models.Patients>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-primary" role="alert" style="margin-bottom:15px">
    <h2 style="margin-bottom:-3px">Pacientes</h2>
</div>


<div style="margin-top:30px">
    <p>
        <a asp-action="Create" value="Crear nuevo cliente" class="btn btn-sm btn-outline-primary">Crear nuevo cliente</a>
    </p>

    <hr style="margin-bottom:25px" />
    <table id="myTable" class="table table-bordered table-hover">
        <thead style="background-color:#33b5e5;color:white">
            <tr>
                <th style="min-width:140px">
                    @Html.DisplayNameFor(model => model.CreationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClientId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Names)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastNames)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Rfc)
                </th>
                <th style="display:none">
                    @Html.DisplayNameFor(model => model.Calle)
                </th>
                <th style="min-width:140px;display:none">
                    @Html.DisplayNameFor(model => model.Numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Colonia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FamiliarPhone)
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreationDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClientId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Names)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastNames)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Rfc)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.Calle)
                    </td>
                    <td style="display:none">
                        @Html.DisplayFor(modelItem => item.Numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Colonia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FamiliarPhone)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Editar</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Detalles</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br /> <br />
</div>



@section styles{

    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.21/af-2.3.5/b-1.6.2/b-flash-1.6.2/b-html5-1.6.2/b-print-1.6.2/cr-1.5.2/kt-2.5.2/r-2.2.5/rr-1.2.7/datatables.min.css" />

}


@section scripts{
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.21/af-2.3.5/b-1.6.2/b-flash-1.6.2/b-html5-1.6.2/b-print-1.6.2/cr-1.5.2/kt-2.5.2/r-2.2.5/rr-1.2.7/datatables.min.js"></script>


    <script type="text/javascript">

        $(document).ready(function () {
            $('#myTable').DataTable({
                dom: 'Bfrtip',
                colReorder: true,
                buttons: [
                    { extend: 'excel', title: '',className: 'btn1' },
                    { extend: 'csv', className: 'btn2' },
                    { extend: 'pdf', className: 'btn3' },
                    { extend: 'print', className: 'btn4' }

                ]
            });
        });
    </script>



}